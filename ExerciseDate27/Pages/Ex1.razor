@page "/ex1"

<div class="container">
  <h1>Customer Contact Form</h1>
  <EditForm Model="@customerContactVM">
    <DataAnnotationsValidator />
    <div class="form-group">
      <label for="">Full Name*</label><br>
      <input type="text" class="form-control" />
    </div>
    <div class="form-group">
      <label for="">Email*</label><br>
      <input type="email" class="form-control">
    </div>
    <div class="form-group">
      <label for="">Phone Number*</label><br>
      <input type="text" class="form-control">
    </div>
    <div class="form-group">
      <label for="">Address*</label><br>
      <input type="text" class="form-control">
    </div>
    <div class="form-group">
      <label for="">Message*</label><br>
      <textarea class="form-control"></textarea>
    </div>
    <div class="form-group">
      <label for="">Select Service*</label><br>
      <select class="form-control">
        <option value="1">Service 1</option>
        <option value="2">Service 2</option>
        <option value="3">Service 3</option>
      </select>
    </div>
    <div class="form-group d-flex">
      <input type="checkbox" />
      <p class="mt-3 ms-2">I agree to the terms and conditions *</p>
      <p class="mt-3 ms-2 text text-danger ms-1">You must agree before submitting</p>
    </div>
    <button type="submit" class="btn btn-primary" style="width: 100%;">Submit</button>
  </EditForm>
</div>


@code {
  private  CustomerContactVM customerContactVM = new CustomerContactVM();
}